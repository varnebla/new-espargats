---
import '@styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="fantasy">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{title} | Espargats en Barcelona</title>
    <meta name="description" content={description} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://new-espargats.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Espargats en Barcelona`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/about-01.webp" />

    <!-- Twitter Meta Tags -->
    <meta name="
      twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="new-espargats.vercel.app" />
    <meta property="twitter:url" content="https://new-espargats.vercel.app/" />
    <meta name="twitter:title" content={`${title} | Espargats en Barcelona`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/about-01.webp" /></head
  >

  <!-- Meta Tags Generated via https://www.opengraph.xyz -->

  <body class="flex flex-col min-h-screen z-10">
    <Header />
    <main class="flex-1 pt-16 z-0">
      <slot />
    </main>
    <Footer />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
